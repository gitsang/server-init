# proxy
alias px='proxy'
list_proxy() {
    echo $http_proxy
}
proxy() {
    PROXY_HOST=localhost
    case "$1" in
        "--show")
            echo ${proxy}
            ;;
        "-l"|"--list")
            echo PROXY_HOST=$PROXY_HOST
            list_proxy
            ;;
        "-c"|"--clean")
            export proxy=
            export {HTTP,HTTPS,FTP}_PROXY=""
            export {http,https,ftp}_proxy=""
            list_proxy
            ;;
        "-s"|"--set")
            case "$2" in
                "vpn")
                    export proxy=vpn
                    export {http,https,ftp}_proxy="http://${PROXY_HOST}:1080";;
                "us")
                    export proxy=us
                    export http_proxy="http://${PROXY_HOST}:1081";;
                "ru")
                    export proxy=us
                    export http_proxy="http://${PROXY_HOST}:1082";;
                "cn")
                    export proxy=cn
                    export http_proxy="http://${PROXY_HOST}:1083";;
                "ho")
                    export proxy=ho
                    export http_proxy="http://${PROXY_HOST}:1084";;
                "co")
                    export proxy=co
                    export {http,https,ftp}_proxy="http://${PROXY_HOST}:1085";;
                *)
                    ;;
            esac
            export https_proxy=$http_proxy
            export ftp_proxy=$http_proxy
            export HTTP_PROXY=$http_proxy
            export HTTPS_PROXY=$http_proxy
            export FTP_PROXY=$http_proxy
            list_proxy
            ;;
        *)
            echo "help:"
            echo "    -h, --help           help"
            echo "    -l, --list           list current proxy"
            echo "    -c, --clean          clean proxy"
            echo "    -s, --set [location] set proxy"
            echo "              vpn        (1080)"
            echo "              us         (1081)"
            echo "              ru         (1082)"
            echo "              cn         (1083)"
            echo "              ho         (1084)"
            echo "              co         (1085)"
            list_proxy
            ;;
    esac
}
