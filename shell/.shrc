# tmpfile

tmp() {
    TMPROOT=~/.tmp
    DATE=$(date +%s)
    OPT=$1
    case ${OPT} in
        dir)
            TMPDIR=${TMPROOT}/${DATE}
            mkdir -p ${TMPDIR}
            echo -n "Change Dir? (Default:Y) [Y/n]"
            read input
            case $input in
                [yY][eE][sS]|[yY]|"")
                    cd ${TMPDIR}
                    ;;
            esac
            ;;
        *)
            TMPFILE=${TMPROOT}/${DATE}.${OPT}
            nvim ${TMPFILE}
            ;;
    esac
}

